extends layout

block content

    br

    p !{message}
    .container
        .title.h3 Create Settlement Account
        br
        form(action="/transfer/createsettlement", method="post")
            .form-group.row
                label.col-sm-2.col-form-label accountName
                .col-sm-7
                    input.form-control(name="accountName", type='text', placeholder='Enter Account Name' required)
                    small.form-text.text-muted
                        | accountName    
            .form-group.row
                label.col-sm-2.col-form-label Bank Id
                .col-sm-7
                    input.form-control(name="bankId", type='text', placeholder='Enter Bank Id' required)
                    small.form-text.text-muted
                        | Bank Id    
            .form-group.row
                label.col-sm-2.col-form-label Bank Branch Id
                .col-sm-7
                    input.form-control(name="bankBranchId", type='text', placeholder='Enter Bank Branch Id' required)
                    small.form-text.text-muted
                        | Bank Branch Id  
            .form-group.row
                label.col-sm-2.col-form-label Account Number
                .col-sm-7
                    input.form-control(name="accountNumber", type='integer', placeholder='Enter Account Number' required)
                    small.form-text.text-muted
                        | Account Number
            
            br
            .form-group.row
                .col-sm-7
                    button.btn.btn-success(type='submit') Create Settlement Account